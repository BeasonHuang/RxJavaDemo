<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewmodel"
            type="com.hb.rxjavademo.viewmodel.CreateOperatorViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{viewmodel::create}"
            android:text="create"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{viewmodel::just}"
            android:text="just"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{viewmodel::fromIterable}"
            android:text="fromIterable"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{viewmodel::timer}"
            android:text="timer"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{viewmodel::fromArray}"
            android:text="fromArray"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{viewmodel::interval}"
            android:text="interval"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{viewmodel::intervalRange}"
            android:text="intervalRange"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{viewmodel::range}"
            android:text="range"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size" />

    </LinearLayout>
</layout>